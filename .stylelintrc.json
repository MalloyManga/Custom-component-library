{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-tailwindcss"
    ],
    "customSyntax": "postcss-html",
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer",
                    "theme",
                    "config"
                ]
            }
        ],
        "no-descending-specificity": null
    }
}